   <children>
      <Text layoutX="124.0" layoutY="115.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Authentication For Check BOQ">
         <font>
            <Font name="Arial Rounded MT Bold" size="37.0" />
         </font>
      </Text>
      <ImageView fitHeight="143.0" fitWidth="143.0" layoutX="330.0" layoutY="161.0">
         <image>
            <Image url="@../../photo/password.png" />
